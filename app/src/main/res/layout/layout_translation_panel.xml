<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F0F0F0"
    android:clickable="true"
    android:focusable="true"
    android:elevation="4dp">

    <!-- LANGUAGE SELECTION BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_close_translate"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#555555"
            android:contentDescription="Close"/>

        <!-- Source Language -->
        <Spinner
            android:id="@+id/spinner_source_lang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"/>

        <!-- Swap Icon (Using Text Arrow for simplicity and clarity) -->
        <TextView
            android:id="@+id/btn_swap_lang"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="â‡„"
            android:textSize="20sp"
            android:textColor="#555555"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Target Language -->
        <Spinner
            android:id="@+id/spinner_target_lang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"/>

    </LinearLayout>

    <!-- INPUT PREVIEW BOX -->
    <!-- This replaces the candidates. User types on keyboard, text appears here. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#F0F0F0">

        <TextView
            android:id="@+id/translation_input_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:background="#FFFFFF"
            android:hint="Type here to translate..."
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
            
    </LinearLayout>

</LinearLayout>