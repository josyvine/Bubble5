<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.bubble">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission to act as a Keyboard -->
    <uses-permission android:name="android.permission.BIND_INPUT_METHOD" />
    <!-- Permission to act as an Accessibility Service -->
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/bubble"
        android:label="bubble"
        android:roundIcon="@drawable/bubble"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">

        <!-- FIX: Updated Metadata for ML Kit (New OCR Engine) -->
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2223803405403727~3540804071"/>

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:theme="@style/Theme.AppCompat.Light" />

        <activity
            android:name=".HelpActivity"
            android:label="Help"
            android:theme="@style/Theme.AppCompat.Light" />

        <service
            android:name=".FloatingTranslatorService"
            android:enabled="true"
            android:exported="false" />

        <!-- Accessibility Service for Auto-Scrolling -->
        <service
            android:name=".GlobalScrollService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- Input Method Service for the Keyboard Extension -->
        <service
            android:name=".BubbleKeyboardService"
            android:label="Bubble Keyboard"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:exported="true">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>
        
        <!-- Service for the Two-Line Overlay Logic -->
        <service
            android:name=".TwoLineOverlayService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>