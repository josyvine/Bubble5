<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- STATE: PRESSED (Finger is touching the key) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Darker Gray to indicate click -->
            <solid android:color="#D0D0D0"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- STATE: NORMAL (Default appearance) -->
    <item>
        <shape android:shape="rectangle">
            <!-- White Background -->
            <solid android:color="#FFFFFF"/>
            <corners android:radius="6dp"/>
            
            <!-- Slight border/shadow effect for definition -->
            <stroke 
                android:width="1dp" 
                android:color="#CCCCCC"/>
                
            <!-- Padding to separate keys slightly if needed -->
            <padding 
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="4dp"/>
        </shape>
    </item>

</selector>