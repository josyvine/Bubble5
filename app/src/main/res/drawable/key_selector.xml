<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- STATE: PRESSED (Finger is dragging over the key) -->
    <!-- FIX: Changed to BLUE to match Gboard professional selection -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <!-- STATE: NORMAL (Default appearance) -->
    <item>
        <shape android:shape="rectangle">
            <!-- White Background -->
            <solid android:color="#FFFFFF"/>
            <corners android:radius="6dp"/>
            
            <!-- Slight border for definition -->
            <stroke 
                android:width="1dp" 
                android:color="#CCCCCC"/>
                
            <!-- Padding -->
            <padding 
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="4dp"/>
        </shape>
    </item>

</selector>